      <div class='sold-out'>
       <span>Sold Out!!</span>
      </div>
      <% end %>
</div>
<div class='item-info'>
 <h3 class='item-name'>
  <%= item.name %>
 </h3>
 <div class='item-price'>
  <span><%= item.price %>å††<br><%= item.delivery_charge.name %></span>
   <div class='star-btn'>
    <%= image_tag "star.png", class:"star-icon" %>
     <span class='star-count'>0</span>
   </div>
 </div>
</div>
<% end %>